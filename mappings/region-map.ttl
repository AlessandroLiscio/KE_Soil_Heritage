@prefix rr: <http://www.w3.org/ns/r2rml#> .
@prefix crml: <http://w3id.org/stlab/crml#> .
@prefix rml: <http://semweb.mmlab.be/ns/rml#> .
@prefix ql: <http://semweb.mmlab.be/ns/ql#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix ispra: <http://dati.isprambiente.it/ontology/core/#> .

@prefix pr: <https://soilproject/temp#> .


<#RegionsCSV>
	rml:source "./data/Regioni_2012.csv" ;
	rml:referenceFormulation ql:CSV;
	crml:separator ";".


<#Regions>    
	rml:logicalSource <#RegionsCSV>;

  rr:subjectMap [
    rr:template "https://soilproject/regions/{NOME_Regione}";
    rr:class pr:Place
  ];

  rr:predicateObjectMap [
    rr:predicate rdfs:label;
    rr:objectMap [
      rml:reference "COD_REG";
      rr:datatype xsd:string
    ]
  ];
  
  rr:predicateObjectMap [
    rr:predicate rdfs:comment;
    rr:objectMap [
      rml:reference "NOME_Regione";
      rr:datatype xsd:string
    ]
  ];

  rr:predicateObjectMap [
    rr:predicate foaf:primaryTopic;
    rr:objectMap [
      rr:template "<http://dati.isprambiente.it/id/place/{NOME_Regione}>";
      rr:datatype ispra:GeoFeature
    ]
  ].