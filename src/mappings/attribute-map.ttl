
@prefix rr: <http://www.w3.org/ns/r2rml#> .
@prefix crml: <http://w3id.org/stlab/crml#> .
@prefix rml: <http://semweb.mmlab.be/ns/rml#> .
@prefix ql: <http://semweb.mmlab.be/ns/ql#> .
@prefix dc: <https://www.dublincore.org/specifications/dublin-core/dcmi-terms/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .

@prefix soil: <http://soilproject.org/> .

<#AttributesCSV>
  rml:source "./data/Descrizione_campi.csv" ;
  rml:referenceFormulation ql:CSV;
  crml:separator ";".


<#Attributes>
  rml:logicalSource <#AttributesCSV>;

  rr:subjectMap [
        rr:template "http://soilproject.org/id/skos/sc/{Campo_ID}";
    rr:class skos:Concept
      ];

  rr:predicateObjectMap [
    rr:predicate dc:identifier;
    rr:objectMap [
      rml:reference "Campo_ID";
      rr:datatype xsd:string
    ]
  ];

  rr:predicateObjectMap [
    rr:predicate skos:prefLabel;
    rr:objectMap [
      rml:reference "Campo";
      rr:datatype xsd:string
    ]
  ];

	rr:predicateObjectMap [
	rr:predicate skos:scopeNote;
	rr:objectMap [
			rml:reference "Descrizione";
			rr:datatype xsd:string
		]
	].
